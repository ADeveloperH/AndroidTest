<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="47">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="316dp"
            android:background="@drawable/loaderror_bg"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/retryAnimeView"
            android:layout_width="260dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/loaderror_anim"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="43"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="哎呀,网络好像不太给力，请稍后再试"
            android:textColor="#666d80"
            android:textSize="14dp" />

        <Button
            android:id="@+id/reryClickView"
            android:layout_width="110dp"
            android:layout_height="34dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/loaderror_btn"
            android:gravity="center"
            android:text="重新加载"
            android:textColor="#5aa7ff"
            android:textSize="14dp" />

    </LinearLayout>

</LinearLayout>