<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="47">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="316dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/loaderror_bg"
            android:scaleType="fitXY" />

        <com.mobile.androidtest.frameanimation.MockFrameImageView
            android:id="@+id/retryAnimeView"
            android:layout_width="260dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:cache_percent="0.1"
            app:src="@drawable/loading_animation" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="43"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reryInfoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="哎呀\n网络好像不太给力，请稍后再试"
            android:lineSpacingExtra="6dp"
            android:gravity="center"
            android:textColor="#666d80"
            android:textSize="14dp" />

        <Button
            android:id="@+id/reryClickView"
            android:layout_width="110dp"
            android:layout_height="34dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/loaderror_btn"
            android:gravity="center"
            android:text="重新加载"
            android:textColor="#5aa7ff"
            android:textSize="14dp" />

    </LinearLayout>

</LinearLayout>